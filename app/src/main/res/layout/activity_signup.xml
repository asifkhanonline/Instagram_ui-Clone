<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".signup">


    <TextView

        android:id="@+id/textView3"
        android:layout_width="287dp"
        android:layout_height="119dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="597dp"
        android:text="ℑ𝔫𝔰𝔱𝔞𝔤𝔯𝔞𝔪"
        android:textColor="@android:color/black"
        android:textSize="70dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="315dp"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="547dp"
        android:text="Sign up to see photos and videos from your freinds"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="58dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="494dp"
        android:text="OR"
        android:textSize="20dp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="87dp"
        android:layout_height="83dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="412dp"
        android:src="@drawable/h"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <EditText

        android:id="@+id/editemail"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="352dp"
        android:ems="10"
        android:inputType="textPersonName"
       android:hint="Mobile Number or Email" />

    <EditText
        android:id="@+id/editname"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="296dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/edituser"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="235dp"
        android:ems="10"
        android:inputType="textPersonName"
       android:hint="Username" />

    <EditText
        android:id="@+id/editpass"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="174dp"
        android:ems="10"
        android:inputType="textPassword"
       android:hint="Password"/>

    <Button
        android:background="@drawable/button"
        android:id="@+id/Signupbutton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="113dp"
        android:text="Sign Up" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/textView7"
        android:layout_width="320dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="41dp"
        android:text="By siging up, you agree to our Terms and Privacy policy"
        android:textSize="20dp" />
</RelativeLayout>